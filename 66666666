<script>
refresher.init({
	id:"wrapper",
	pullDownAction:Refresh,
	pullUpAction:Load
	});
		
	var generatedCount = 0;
function Refresh() {
	//下拉刷新数据
	setTimeout(function () {	// <-- Simulate network congestion, remove setTimeout from production!
		var el, li, i,clone_div,asd;
		asd=123;
		el =document.querySelector("#wrapper ul");
		el.innerHTML='';
		clone_div ="<div class='user-list'>";
		clone_div +="<div class='placed-top-title'>";
		clone_div +="<img class='img-round' src='https://raw.githubusercontent.com/jeremyxieze/test01/master/test1.jpg' />";
		clone_div +="<span>MkJ</span>";
		clone_div +="<p>04-10&nbsp;10:40</p>";
		clone_div +="</div>";
		clone_div +="<div class='describe'>我的色系|颇具时代感，小米收音机体验</div>";
		clone_div +="<div class='describe-img'>";
		clone_div +="<img src='https://raw.githubusercontent.com/jeremyxieze/test01/master/test1.jpg' />"
		clone_div +="</div>";
		clone_div +="<div class='user-num'>";
		clone_div +="<div class='read'>阅读&nbsp;<span>"+asd+"</span></div>";
		clone_div +="<div class='reply'>回复&nbsp;<span>1</span></div>";
		clone_div +="</div>";
		clone_div +="</div>";
	     
		for (i=0; i<11; i++) {
			li = document.createElement('li');
			$(clone_div).appendTo(li);
			el.insertBefore(li, el.childNodes[0]);
		}	
		myScroll.refresh();/****remember to refresh when you action was completed！！！****/
	}, 1000);
}

function Load() {
	//上拉加载数据
	setTimeout(function () {// <-- Simulate network congestion, remove setTimeout from production!
		var el, li, i,clone_div;
		el =document.querySelector("#wrapper ul");
		clone_div ="<div class='user-list'>";
		clone_div +="<div class='placed-top-title'>";
		clone_div +="<img class='img-round' src='https://raw.githubusercontent.com/jeremyxieze/test01/master/test1.jpg' />";
		clone_div +="<span>MkJ</span>";
		clone_div +="<p>04-10&nbsp;10:40</p>";
		clone_div +="</div>";
		clone_div +="<div class='describe'>我的色系|颇具时代感，小米收音机体验</div>";
		clone_div +="<div class='describe-img'>";
		clone_div +="<img src='https://raw.githubusercontent.com/jeremyxieze/test01/master/test1.jpg' />"
		clone_div +="</div>";
		clone_div +="<div class='user-num'>";
		clone_div +="<div class='read'>阅读&nbsp;<span>13</span></div>";
		clone_div +="<div class='reply'>回复&nbsp;<span>1</span></div>";
		clone_div +="</div>";
		clone_div +="</div>";
		for (i=0; i<5; i++) {
			li = document.createElement('li');
			<!-- li.appendChild(document.createTextNode("需要加载的东西")); -->
			$(clone_div).appendTo(li);
			el.appendChild(li, el.childNodes[0]);
		}
		myScroll.refresh();/****remember to refresh when you action was completed！！！****/
	}, 1000);
}
</script>
